<Window x:Class="LolSpellOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LolSpellOverlay"
        xmlns:userControls="clr-namespace:LolSpellOverlay.Views.UserControls"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Topmost="True"
        Title="Spell Overlay" Height="200" Width="140"
        Background="#AA000000"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>

        <userControls:EnemyRow 
            Grid.Row="0"
            Width="140" Height="30"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Lane="Top"
            Spell_D="Flash"
            Spell_F="Ignite"
            Spell_G="TopQuestTeleport"/>

        <userControls:EnemyRow 
            Grid.Row="1"
            Width="140" Height="30"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Lane="Jungle"
            Spell_D="Flash"
            Spell_F="Smite"/>

        <userControls:EnemyRow 
            Grid.Row="2"
            Width="140" Height="30"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Lane="Mid"
            Spell_D="Flash"
            Spell_F="Teleport"/>

        <userControls:EnemyRow 
            Grid.Row="3"
            Width="140" Height="30"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Lane="Bot"
            Spell_D="Flash"
            Spell_F="Barrier"/>

        <userControls:EnemyRow 
            Grid.Row="4"
            Width="140" Height="30"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Lane="Support"
            Spell_D="Flash"
            Spell_F="Exhaust"/>

    </Grid>
</Window>
